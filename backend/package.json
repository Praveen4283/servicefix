{
  "name": "servicefix-backend",
  "version": "1.0.0",
  "description": "Backend for ServiceFix - AI-Powered Help Desk Solution",
  "packageManager": "npm@10.8.1",
  "main": "dist/index.js",
  "scripts": {
    "start": "set NODE_ENV=production && node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "npx tsc",
    "render-build": "npm ci --include=dev && npm run build",
    "build:prod": "npm ci --omit=dev && npm run build && npm prune --omit=dev",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "typeorm": "typeorm-ts-node-commonjs",
    "db:validate": "ts-node -e \"require('./src/utils/schemaValidator').validateDatabaseSchema().then(valid => console.log('Database schema is ' + (valid ? 'valid' : 'invalid')))\"",
    "db:info": "ts-node src/scripts/schema-utilities.ts info",
    "db:register-migration": "ts-node src/scripts/schema-utilities.ts register",
    "start:dev": "ts-node src/server.ts"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.4",
    "@types/ioredis": "^4.28.10",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.9",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.2.1",
    "socket.io": "^4.8.1",
    "typeorm": "^0.3.20",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^20.11.19",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.11.13",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": "^20.0.0"
  }
}
